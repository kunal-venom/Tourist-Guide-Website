.box
{
   position: relative ;
   left: 20%;
   top: 50px;
   width: 150px;
   height: 100px;
   margin: 20px;
   display: inline-block;
   padding: 15px 25px;
   justify-content: center;
   align-items: center;

}

.box::before
{
   content: '';
   position: absolute;
   bottom: 0;
   left: 0;
   width: 100%;
   height: 100%;
   filter: blur(25px);
   border-radius: 40px;
   transform: translateY(30px) scale(0.9);
}

.box:nth-child(1),
.box:nth-child(1)::before
{
   background: linear-gradient(135deg, #24ff72, #2196F3);
}

.box:nth-child(2),
.box:nth-child(2)::before
{
   background: linear-gradient(135deg, #24ff72, #2196F3);
}

.box:nth-child(3),
.box:nth-child(3)::before
{
