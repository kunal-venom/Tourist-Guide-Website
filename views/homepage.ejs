}

.box:nth-child(4),
.box:nth-child(4)::before
{
   background: linear-gradient(135deg, #24ff72, #2196F3);
}

.box h2
{
   position: relative;
   z-index: 1;
   font-size: 3em;
   color: #fff;
}






